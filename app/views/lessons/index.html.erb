<p id="notice"><%= notice %></p>

<h1>Listing Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Grade</th>
      <th>Subject</th>
      <th>State</th>
      <th>Ese</th>
      <th>Standards</th>
      <th>Author</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.title %></td>
        <td><%= lesson.grade %></td>
        <td><%= lesson.subject %></td>
        <td><%= lesson.state %></td>
        <td><%= lesson.ese %></td>
        <td><%= lesson.standards %></td>
        <td><%= lesson.author %></td>
        <td><%= link_to 'View Lesson', lesson %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path %>
