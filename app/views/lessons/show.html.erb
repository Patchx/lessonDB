<br>

<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <p>
        <strong>Title:</strong>
        <%= @lesson.title %>
      </p>

      <p>
        <strong>Author:</strong>
        <%= @lesson.author %>
      </p>

      <p>
        <strong>Document Hyperlink:</strong>
        <a href="<%= @lesson.hyperlink %>"></a>
      </p>
    </div>
    <div class="col-xs-6">
      <p>
        <strong>Grade:</strong>
        <%= @lesson.grade %>
      </p>

      <p>
        <strong>Subject:</strong>
        <%= @lesson.subject %>
      </p>

      <p>
        <strong>State:</strong>
        <%= @lesson.state %>
      </p>

      <p>
        <strong>Ese:</strong>
        <%= @lesson.ese %>
      </p>

      <p>
        <strong>Standards:</strong>
        <%= @lesson.standards %>
      </p>
    </div>
  </div>
</div>


<p>
  <%= cl_image_tag("#{@lesson.file.public_id}.jpg", :crop => :fill) unless @lesson.file.nil? %>
</p>

<% if authorized?(@lesson) %>
  <%= link_to 'Edit', edit_lesson_path(@lesson) %> |
  <%= link_to 'Destroy', @lesson, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>

<%= link_to 'Back', lessons_path %>
